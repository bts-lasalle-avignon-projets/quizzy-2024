<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/github"
    tools:context=".ihm.vues.VueParticipants"
    tools:layout_editor_absoluteX="-609dp"
    tools:layout_editor_absoluteY="-381dp">

    <Spinner
        android:id="@+id/spinner_participants"
        android:layout_width="397dp"
        android:layout_height="53dp"
        android:backgroundTint="#FFFFFF"
        android:foregroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Spinner
        android:id="@+id/spinner_peripheriques"
        android:layout_width="397dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:foregroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/spinner_participants"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinner_participants"
        app:layout_constraintTop_toBottomOf="@+id/spinner_participants" />

    <Button
        android:id="@+id/btn_associer"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:text="Associer"
        app:layout_constraintEnd_toEndOf="@+id/spinner_peripheriques"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/spinner_peripheriques"
        app:layout_constraintTop_toBottomOf="@+id/spinner_peripheriques" />

    <ListView
        android:id="@+id/liste_peripheriques"
        android:layout_width="349dp"
        android:layout_height="406dp"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_peripheriques"
        app:layout_constraintStart_toEndOf="@+id/spinner_peripheriques"
        app:layout_constraintTop_toTopOf="@+id/spinner_peripheriques" />
</androidx.constraintlayout.widget.ConstraintLayout>